{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "gleam format $CLAUDE_FILE_PATHS",
            "filePatterns": ["**/*.gleam"]
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "just check"
          }
        ],
        "filePatterns": ["**/birch_ffi.erl", "**/birch_ffi.mjs"]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo '⚠️  Remember: FFI changes require updating BOTH birch_ffi.erl AND birch_ffi.mjs'",
            "filePatterns": ["**/birch_ffi.erl", "**/birch_ffi.mjs"]
          }
        ]
      }
    ]
  }
}
